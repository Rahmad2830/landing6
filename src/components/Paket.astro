---
const { paket, description } = Astro.props
---

<div class="card border-0 rounded-4 shadow mt-5">
  <div class="card-body px-4 py-4">
    <h1 class="fs-3">{paket}</h1>
    <slot name="harga" />
    <p class="fs-5 mt-4">{description}</p>
    <p class="text-center fs-3 fw-semibold">Fitur-Fitur</p>
    <slot name="fitur" />
    <div class="text-center">
      <a href="#home" class="btn btn-outline-primary btn-lg rounded-5 fs-5 w-100 fw-semibold py-2 px-4 mt-4">Beli Sekarang</a>
    </div>
  </div>
</div>