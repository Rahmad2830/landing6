---
import Layout from './Layout.astro'
import Navbar from '../components/Navbar.astro'
import Section from '../components/Section.astro'
import Cards from '../components/Cards.astro'
import Testimoni from '../components/Testimoni.astro'
import Paket from '../components/Paket.astro'
const { frontmatter } = Astro.props
---

<Layout pageTitle={frontmatter.pageTitle}>
	<Navbar />
	<main>
	  <Section style="pad" id="home">
	    <div class="d-md-flex gap-4 justify-content-between align-items-center text-center text-md-start">
	      <div>
	        <h1 class="display-2 fw-medium">{frontmatter.heroTitle}</h1>
	        <p class="fs-5">{frontmatter.heroSub}</p>
	        <div class="text-center">
	        <a href="#contact" class="btn btn-outline-primary btn-lg rounded-5 fs-5 fw-semibold py-2 px-4 mt-4">{frontmatter.heroBtn}</a>
	        </div>
	      </div>
	      <img src="/img/hero.webp" alt="hero image" fetchpriority="high" class="hero-image img-fluid mt-5 mt-md-0">
	    </div>
	  </Section>
	  <!-- layanan -->
	  <Section style="pb-5" id="layanan">
	    <h1 class="display-4 fw-medium">{frontmatter.servicesTitle}</h1>
	    <p class="fs-5 pt-4">{frontmatter.servicesSub}</p>
	    <div class="row mt-5">
	      {frontmatter.services.map((item) => (
	      <div class="col-lg-3">
	        <Cards style="card rounded-4 bg-body-tertiary text-center mt-4 mt-lg-0" title={item.title} description={item.description}>
	          <div class="text-center" slot="icon">
	            <i class={item.icon}></i>
	          </div>
	        </Cards>
	      </div>
	      ))}
	    </div>
	  </Section>
	  <!-- tentang kami -->
	  <Section style="py-5 bg-primary text-white" id="tentang">
	    <div class="d-md-flex justify-content-between align-items-center gap-5">
	      <img src="/img/about.webp" alt="about image" loading="lazy" class="hero-image">
	      <div class="text-center text-md-start">
	        <h1 class="display-4 fw-medium">{frontmatter.aboutTitle}</h1>
	        <p class="fs-5 pt-4">{frontmatter.aboutSub}</p>
	      </div>
	    </div>
	  </Section>
	  <!-- mengapa memilih kami -->
	  <Section style="py-5" id="mengapakami">
	    <h1 class="display-4 fw-medium">{frontmatter.whyChooseUsTitle}</h1>
	    <p class="pt-4 fs-5">{frontmatter.whyChooseUsSub}</p>
	    <div class="row gap-4 gap-lg-0 pt-5">
	      <div class="col-lg-8">
	        <div class="row gap-4 gap-lg-0">
	          <div class="col-lg-6">
	            <Cards style="card bg-body-tertiary px-3 rounded-4" title={frontmatter.whyChooseUs1.title} description={frontmatter.whyChooseUs1.description}>
	              <div slot="icon">
	                <i class="bi bi-bar-chart-line display-4"></i>
	              </div>
	            </Cards>
	          </div>
	          <div class="col-lg-6">
	            <Cards style="card bg-body-tertiary px-3 rounded-4" title={frontmatter.whyChooseUs2.title} description={frontmatter.whyChooseUs2.description}>
	              <div slot="icon">
	                <i class="bi bi-card-checklist display-4"></i>
	              </div>
	            </Cards>
	          </div>
	          <div class="col-lg-12 mt-0 mt-lg-4">
	            <Cards style="card bg-body-tertiary px-3 rounded-4" title={frontmatter.whyChooseUs3.title} description={frontmatter.whyChooseUs3.description}>
	              <div slot="icon">
	                <i class="bi bi-people-fill display-4"></i>
	              </div>
	            </Cards>
	          </div>
	        </div>
	      </div>
	      <div class="col-lg-4 align-self-center">
	        <Cards style="card bg-primary px-3 text-white rounded-4" title={frontmatter.whyChooseUs4.title} description={frontmatter.whyChooseUs4.description}>
	          <div slot="icon">
	            <i class="bi bi-recycle display-4"></i>
	          </div>
	         <div class="pt-4" slot="tombol">
	           <a href="#contact" class="btn btn-light btn-lg rounded-5 fs-5 fw-semibold py-2 px-4 mt-4">{frontmatter.heroBtn}</a>
	         </div>
	       </Cards>
	      </div>
	    </div>
	  </Section>
	  <!-- Testimonial -->
	  <Section style="py-5" id="testimoni">
	    <h1 class="display-4 fw-medium">{frontmatter.testimonialTitle}</h1>
	    <p class="fs-5 mt-4">{frontmatter.testimonialSub}</p>
	    <div class="row mt-5">
	      {frontmatter.testimonial.map((item) => (
	      <div class="col-lg-4 p-3">
	        <Testimoni description={item.description} name={item.name} position={item.position} />
	      </div>
	      ))}
	    </div>
	  </Section>
	  <!-- pricing -->
	  <Section style="py-5 bg-primary text-white" id="pricing">
	    <h1 class="display-4 fw-medium">{frontmatter.pricingTitle}</h1>
	    <p class="fs-5 pt-4">{frontmatter.pricingSub}</p>
	    <div class="row mt-5">
	      {frontmatter.paket.map((item) => (
	      <div class="col-lg-4">
	        <Paket paket={item.paket} description={item.description} btn={frontmatter.paketBtn}>
	          <div slot="harga">
	            <h2 class="fs-1 fw-semibold mt-4">Rp. {item.harga}<span class="fs-3">/bulan</span></h2>
	          </div>
	          <div slot="fitur">
  	          <ul>
  	          {item.fitur.map(f => (
  	            <li>{f}</li>
  	           ))}
  	          </ul>
	          </div>
	         </Paket>
	      </div>
	      ))}
	      <div class="col-lg-4">
	        <Paket paket={frontmatter.paketCustom.harga} description={frontmatter.paketCustom.description} btn={frontmatter.paketBtn}>
	          <div slot="harga">
	            <h2 class="fs-1 fw-semibold mt-4">{frontmatter.paketCustom.harga}</h2>
	          </div>
	          <div slot="fitur">
	            <ul>
	              {frontmatter.paketCustom.fitur.map((item) => (
	              <li>{item}</li>
	              ))}
	            </ul>
	          </div>
	        </Paket>
	      </div>
	    </div>
	  </Section>
	  <!-- partner -->
	  <Section style="py-5" id="partner">
	    <h1 class="display-4 fw-medium">{frontmatter.partnerTitle}</h1>
	    <p class="fs-5 pt-4 ">{frontmatter.partnerSub}</p>
	    <div class="row text-center mt-5">
	      {frontmatter.partner.map((item) => (
	      <div class="col-lg-4">
	        <img src={item.logo} alt="Logo company" loading='lazy' class="img-fluid">
	      </div>
	      ))}
	    </div>
	    <div class="text-center">
	      <button class="btn btn-outline-primary btn-lg rounded-5 fs-5 fw-semibold py-2 px-4 mt-5">{frontmatter.partnerBtn}</button>
	    </div>
	  </Section>
	  <!-- contact us -->
	  <Section style="py-5" id="contact">
	   <h1 class="display-4 fw-medium">{frontmatter.contactUsTitle}</h1>
  	 <p class="fs-5 mt-4">{frontmatter.contactUsSub}</p>
	    <div class="row mt-5 gap-4 justify-content-between">
  	    <div class="col-lg-5">
  	      <form class="d-flex flex-column gap-3">
  	        <label for="name">{frontmatter.formName}</label>
  	        <input type="text" name="name" class="form-control" placeholder={frontmatter.formNamePlaceholder} id="name">
  	        <label for="email">{frontmatter.formEmail}</label>
  	        <input type="email" name="name" class="form-control" placeholder={frontmatter.formEmailPlaceholder} id="email">
  	        <label for="message">{frontmatter.formMsg}</label>
  	        <textarea type="text" name="message" class="form-control" id="message" placeholder={frontmatter.formMsgPlaceholder} style="height:7rem"></textarea>
  	        <button class="btn btn-outline-primary fs-5 fw-semibold rounded-5 py-2" type="submit">{frontmatter.formBtn}</button>
  	      </form>
  	    </div>
  	    <div class="col-lg-5">
  	      <p class="fs-5">{frontmatter.contactUsSubRight1}</p>
  	      <p class="fs-5">{frontmatter.contactUsSubRight2}</p>
  	      <ul>
    	      <li class="fs-5">Email: hello@example.co.id</li>
    	      <li class="fs-5">No.Hp: +629l81234567890</li>
    	      <li class="fs-5">Kantor: Jl.Karangkambang no1, Cilacap, Jawa Tengah</li>
  	      </ul>
  	    </div>
  	   </div>
	  </Section>
	</main>
	<!-- footer -->
	<footer class="py-5 bg-primary text-white">
	  <div class="container">
	  <div class="row text-center">
	    <div class="col-md-6 col-lg-4 text-md-start">
	      <h1>BrandBuzz</h1>
	      <ul class="list-unstyled mt-3">
  	      <li class="fs-5">+6281234567890</li>
  	      <li class="fs-5">hello@example.co.id</li>
  	      <li class="fs-5">Jl. Karangkambang no1, Cilacap, Jawa Tengah</li>
	      </ul>
	    </div>
	    <div class="col-md-6 col-lg-2 mt-4 mt-md-0">
	      <h2>{frontmatter.footerCompanyTitle}</h2>
	      {frontmatter.footerCompany.map((item) => (
	      <p><a href={item.url} class="link">{item.tag}</a></p>
	      ))}
	    </div>
	    <div class="col-md-6 col-lg-2 mt-4 mt-md-0 text-md-start">
	      <h2>{frontmatter.footerMenuTitle}</h2>
	      {frontmatter.footerMenu.map((item) => (
	      <p><a href={item.url} class="link">{item.tag}</a></p>
	      ))}
	    </div>
	    <div class="col-md-6 col-lg-4 mt-4 mt-md-0">
	      <h2>Social Media</h2>
	      <div class="d-flex gap-4 justify-content-center">
  	      <a href="#home" class="link"><i class="bi bi-facebook fs-2"></i></a></p>
  	      <a href="#home" class="link"><i class="bi bi-twitter fs-2"></i></a></p>
  	      <a href="#home" class="link"><i class="bi bi-instagram fs-2"></i></a></p>
	      </div>
	    </div>
	  </div>
	  </div>
	</footer>
</Layout>